@if (Model != null && Model.Any())
{
    foreach (var noticia in Model)
    {
        <tr>
            <td>@noticia.Noticia_id</td>
            <td>@noticia.Titulo</td>
            <td>@noticia.Subtitulo</td>
            <td>@noticia.Detalle</td>
            <td>@noticia.Autor</td>
            <td>@noticia.FechaPublicacion.ToString("dd/MM/yyyy")</td>
            <td>
                <form asp-action="PublicarNoticia" asp-controller="Noticias" method="post" style="display:inline-block;">
                    <input type="hidden" name="id" value="@noticia.Noticia_id" />
                    <button class="btn btn-success btn-sm" type="submit">Publicar</button>
                </form>
                <form asp-action="RechazarNoticia" asp-controller="Noticias" method="post" style="display:inline-block;">
                    <input type="hidden" name="id" value="@noticia.Noticia_id" />
                    <button class="btn btn-danger btn-sm" type="submit">Rechazar</button>
                </form>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7" class="text-center">No hay noticias para mostrar.</td>
    </tr>
}
<div class="container">
    <h1>Administrar Noticias</h1>
    <div class="row">
        <div class="col-6">
        <a href="@Url.Action("Admin_noticias","Home")">Noticias</a>
        <br><a href="@Url.Action("Admin_usuarios","Home")">Nosotros</a> 
        <br><a href="@Url.Action("Admin_contacto","Home")">Contactos</a>
        <br><a href="@Url.Action("Admin_notificaciones","Home")">Notificaciones</a> 
        <br>
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Redes Sociales
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="@Url.Action("Admin_certificado", "Home")">Certificado Residencia</a></li>
            <li><a class="dropdown-item" href=“@Url.Action("Admin_certificado", "Home")">Reserva sede vecinal</a></li>
        </ul>
        </div>
        <div class="form-group">
            <label for="fechaPublicacion">Fecha de Publicación</label>
            <input type="date" class="form-control" id="fechaPublicacion" name="fechaPublicacion" required>
        </div>
        <button type="submit" class="btn btn-primary">Agregar Noticia</button>
    </form>
</div>
