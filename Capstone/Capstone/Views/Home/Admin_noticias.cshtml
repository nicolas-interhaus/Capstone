@if (Model != null && Model.Any())
{
    foreach (var noticia in Model)
    {
        <tr>
            <td>@noticia.Noticia_id</td>
            <td>@noticia.Titulo</td>
            <td>@noticia.Subtitulo</td>
            <td>@noticia.Detalle</td>
            <td>@noticia.Autor</td>
            <td>@noticia.FechaPublicacion.ToString("dd/MM/yyyy")</td>
            <td>
                <form asp-action="PublicarNoticia" asp-controller="Noticia" method="post" style="display:inline-block;">
                    <input type="hidden" name="id" value="@noticia.Noticia_id" />
                    <button class="btn btn-success btn-sm" type="submit">Publicar</button>
                </form>
                <form asp-action="RechazarNoticia" asp-controller="Noticia" method="post" style="display:inline-block;">
                    <input type="hidden" name="id" value="@noticia.Noticia_id" />
                    <button class="btn btn-danger btn-sm" type="submit">Rechazar</button>
                </form>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7" class="text-center">No hay noticias para mostrar.</td>
    </tr>
}
<div class="container">
    <h2>Agregar Nueva Noticia</h2>
    <form asp-action="InsertarNoticiasPrueba" asp-controller="Noticias" method="post">
        <div class="form-group">
            <label for="titulo">Título</label>
            <input type="text" class="form-control" id="titulo" name="titulo" required>
        </div>
        <div class="form-group">
            <label for="subtitulo">Subtítulo</label>
            <input type="text" class="form-control" id="subtitulo" name="subtitulo" required>
        </div>
        <div class="form-group">
            <label for="detalle">Detalle</label>
            <textarea class="form-control" id="detalle" name="detalle" required></textarea>
        </div>
        <div class="form-group">
            <label for="autor">Autor</label>
            <input type="text" class="form-control" id="autor" name="autor" required>
        </div>
        <div class="form-group">
            <label for="fechaPublicacion">Fecha de Publicación</label>
            <input type="date" class="form-control" id="fechaPublicacion" name="fechaPublicacion" required>
        </div>
        <button type="submit" class="btn btn-primary">Agregar Noticia</button>
    </form>
</div>

